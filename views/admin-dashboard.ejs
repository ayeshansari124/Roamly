<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard | Roamly</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gray-100 text-gray-900 min-h-screen">

<!-- NAVBAR -->
<nav class="bg-white border-b sticky top-0 z-40">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    <h1 class="text-xl font-extrabold">ðŸ›  Admin Dashboard</h1>

    <div class="flex gap-4">
      <a href="/explore" class="text-sm font-semibold text-gray-600 hover:text-black">
        View Site
      </a>
      <a href="/logout" class="text-sm font-semibold text-red-500 hover:text-red-700">
        Logout
      </a>
    </div>
  </div>
</nav>

<!-- PAGE CONTENT -->
<section class="max-w-7xl mx-auto px-6 py-10">

  <!-- HEADER -->
  <div class="mb-8">
    <h2 class="text-2xl font-bold">All Bookings</h2>
    <p class="text-sm text-gray-600 mt-1">
      View and manage all user bookings across experiences
    </p>
  </div>

  <!-- NO BOOKINGS -->
  <% if (bookings.length === 0) { %>
    <div class="bg-white p-10 rounded-xl shadow text-center text-gray-500">
      No bookings found.
    </div>
  <% } %>

  <!-- BOOKINGS LIST -->
  <div class="space-y-6">

    <% bookings.forEach(b => { %>
      <div class="bg-white rounded-xl shadow overflow-hidden">

        <!-- TOP INFO -->
        <div class="p-5 border-b flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
          <div>
            <h3 class="font-semibold text-lg">
              <%= b.experienceId ? b.experienceId.title : "Deleted Experience" %>
            </h3>

            <p class="text-sm text-gray-500">
              ðŸ‘¤ 
              <%= b.userId ? b.userId.email : "Deleted / Guest User" %>
            </p>
          </div>

          <span class="text-xs px-3 py-1 rounded-full font-semibold
            <%= b.status === "confirmed"
              ? "bg-green-100 text-green-700"
              : "bg-red-100 text-red-600"
            %>">
            <%= b.status.toUpperCase() %>
          </span>
        </div>

        <!-- DETAILS -->
        <div class="p-5 grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm text-gray-700">

          <div>
            <p class="font-medium">Date</p>
            <p class="text-gray-500"><%= b.date %></p>
          </div>

          <div>
            <p class="font-medium">Time</p>
            <p class="text-gray-500"><%= b.time %></p>
          </div>

          <div>
            <p class="font-medium">Quantity</p>
            <p class="text-gray-500"><%= b.qty %></p>
          </div>

        </div>

        <!-- ACTIONS -->
        <% if (b.status === "confirmed") { %>
          <div class="px-5 pb-5">
            <form method="POST" action="/booking/<%= b._id %>/cancel">
              <button
                class="w-full sm:w-auto bg-red-100 text-red-600 px-4 py-2 rounded-lg font-semibold hover:bg-red-200 transition">
                Cancel Booking
              </button>
            </form>
          </div>
        <% } %>

      </div>
    <% }) %>

  </div>

</section>

</body>
</html>
