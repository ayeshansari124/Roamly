<section class="max-w-7xl mx-auto px-6 pt-8">

  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">

    <div class="flex flex-col gap-3 w-full sm:max-w-xl">
      <h1 class="text-2xl font-bold">Explore Experiences</h1>

      <form method="GET" action="/explore" class="flex">
        <input
          type="text"
          name="q"
          value="<%= query || '' %>"
          placeholder="Search experiences or destinations"
          class="w-full px-4 py-2.5 border border-gray-300 rounded-l-lg
                 focus:ring-2 focus:ring-yellow-400 outline-none"
        />
        <button
          type="submit"
          class="bg-yellow-400 px-5 rounded-r-lg font-semibold hover:bg-yellow-500"
        >
          Search
        </button>
      </form>
    </div>

    <% if (userRole === "admin") { %>
      <a
        href="/admin/add-experience"
        class="bg-yellow-400 hover:bg-yellow-500
               text-black font-bold px-5 py-2.5 rounded-lg shadow-sm"
      >
        + Add Experience
      </a>
    <% } %>

  </div>
</section>

<section class="max-w-7xl mx-auto px-6 pb-12 mt-8">

  <% if (experiences.length === 0) { %>
    <div class="text-center text-gray-500 text-lg mt-16">
      No experiences found
      <% if (query) { %>
        for "<strong><%= query %></strong>"
      <% } %>
    </div>
  <% } %>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">

    <% experiences.forEach(exp => { %>
      <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">

        <div class="relative">
          <img src="<%= exp.image %>" class="w-full h-44 object-cover" />
          <span class="absolute top-3 right-3 bg-white text-sm font-bold px-3 py-1 rounded-full shadow">
            ₹<%= exp.price %>
          </span>
        </div>

        <div class="p-4 space-y-2">

          <div class="flex items-start justify-between">
            <h3 class="font-semibold text-base"><%= exp.title %></h3>
            <span class="text-xs bg-gray-200 px-2 py-1 rounded-md"><%= exp.location %></span>
          </div>

          <p class="text-sm text-gray-600 line-clamp-2">
            <%= exp.description %>
          </p>

          <div class="flex justify-between items-center pt-2">
            <span class="text-xs text-gray-500">⏱ <%= exp.duration %></span>
            <a href="/experience/<%= exp._id %>" class="text-yellow-500 font-semibold text-sm">
              View details →
            </a>
          </div>

        </div>
      </div>
    <% }) %>

  </div>
</section>
