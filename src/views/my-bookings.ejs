<section class="max-w-7xl mx-auto px-6 py-8">
  <h1 class="text-2xl font-extrabold">My Bookings</h1>
  <p class="text-sm text-gray-600 mt-1">
    All your upcoming and past experiences in one place
  </p>
</section>

<section class="max-w-7xl mx-auto px-6 pb-12">

  <% if (bookings.length===0) { %>
    <div class="bg-white rounded-xl shadow p-10 text-center">
      <p class="text-gray-500 text-lg mb-4">
        You don‚Äôt have any bookings yet.
      </p>
      <a href="/explore" class="inline-block bg-yellow-400 hover:bg-yellow-500 px-6 py-3 rounded-lg font-semibold">
        Explore Experiences
      </a>
    </div>
    <% } %>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

        <% bookings.forEach(b=> { %>
          <div class="bg-white rounded-xl overflow-hidden shadow">

            <div class="relative">
              <img src="<%= b.experienceId.image %>" class="w-full h-44 object-cover" />
              <span class="absolute top-3 right-3 px-3 py-1 rounded-full text-xs font-bold
            <%= b.status === " confirmed" ? "bg-green-100 text-green-700" : "bg-red-100 text-red-600" %>">
                <%= b.status.toUpperCase() %>
              </span>
            </div>

            <div class="p-4 space-y-3">
              <h3 class="font-semibold">
                <%= b.experienceId.title %>
              </h3>

              <div class="text-sm text-gray-600 space-y-1">
                <p>üìÖ <%= b.date %>
                </p>
                <p>‚è∞ <%= b.time %>
                </p>
                <p>üë• Qty: <%= b.qty %>
                </p>
                <p>üìç <%= b.experienceId.location %>
                </p>
              </div>

              <% if (b.status==="confirmed" ) { %>
                <form method="POST" action="/booking/<%= b._id %>/cancel">
                  <button class="w-full border border-red-500 text-red-600 py-2 rounded-lg text-sm">
                    Cancel Booking
                  </button>
                </form>
                <% } else { %>
                  <p class="text-red-500 font-semibold text-sm">Cancelled</p>
                  <% } %>
            </div>

          </div>
          <% }) %>

      </div>
</section>