<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Bookings | Roamly</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gray-100 text-gray-900 min-h-screen">

  <!-- ‚úÖ SHARED NAVBAR -->
  <%- include("partials/navbar") %>

  <!-- ================= HEADER ================= -->
  <section class="max-w-7xl mx-auto px-6 py-8">
    <h1 class="text-2xl font-extrabold">My Bookings</h1>
    <p class="text-sm text-gray-600 mt-1">
      All your upcoming and past experiences in one place
    </p>
  </section>

  <!-- ================= CONTENT ================= -->
  <section class="max-w-7xl mx-auto px-6 pb-12">

    <% if (bookings.length === 0) { %>
      <div class="bg-white rounded-xl shadow p-10 text-center">
        <p class="text-gray-500 mb-4 text-lg">
          You don‚Äôt have any bookings yet.
        </p>
        <a
          href="/explore"
          class="inline-block bg-yellow-400 hover:bg-yellow-500 px-6 py-3 rounded-lg font-semibold"
        >
          Explore Experiences
        </a>
      </div>
    <% } %>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

      <% bookings.forEach(b => { %>
        <div class="bg-white rounded-xl overflow-hidden shadow hover:shadow-lg transition">

          <!-- IMAGE -->
          <div class="relative">
            <img
              src="<%= b.experienceId.image %>"
              alt="<%= b.experienceId.title %>"
              class="w-full h-44 object-cover"
            />

            <span class="absolute top-3 right-3 px-3 py-1 rounded-full text-xs font-bold
              <%= b.status === "confirmed"
                ? "bg-green-100 text-green-700"
                : "bg-red-100 text-red-600"
              %>">
              <%= b.status.toUpperCase() %>
            </span>
          </div>

          <!-- CONTENT -->
          <div class="p-4 space-y-3">

            <h3 class="text-base font-semibold leading-snug">
              <%= b.experienceId.title %>
            </h3>

            <div class="text-sm text-gray-600 space-y-1">
              <p>üìÖ <strong>Date:</strong> <%= b.date %></p>
              <p>‚è∞ <strong>Time:</strong> <%= b.time %></p>
              <p>üë• <strong>Qty:</strong> <%= b.qty %></p>
              <p>üìç <strong>Location:</strong> <%= b.experienceId.location %></p>
            </div>

            <!-- ACTION -->
            <% if (b.status === "confirmed") { %>
              <form method="POST" action="/booking/<%= b._id %>/cancel">
                <button
                  class="mt-3 w-full text-sm border border-red-500 text-red-600 py-2 rounded-lg
                         font-semibold hover:bg-red-50 transition"
                >
                  Cancel Booking
                </button>
              </form>
            <% } else { %>
              <p class="mt-3 text-sm text-red-500 font-semibold">
                ‚ùå This booking was cancelled
              </p>
            <% } %>

          </div>
        </div>
      <% }) %>

    </div>
  </section>

</body>
</html>
