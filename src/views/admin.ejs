<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin â€” Add Experience</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gray-100 min-h-screen">

<%- include("partials/navbar") %>

<div class="max-w-6xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">
    Admin â€” Add Experience
  </h1>

  <form
  action="/admin/add-experience"
  method="POST"
  class="bg-white p-5 rounded-xl shadow space-y-4"
>
  <!-- CORE INFO -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    <input name="title" placeholder="Title" required class="form-input" />
    <input name="location" placeholder="Location" required class="form-input" />
    <input name="price" type="number" placeholder="Price" required class="form-input" />
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
    <input name="duration" placeholder="Duration (eg. 3 days)" required class="form-input" />
    <input name="image" placeholder="Image URL" required class="form-input" />
  </div>

  <!-- DETAILS -->
  <textarea
    name="description"
    placeholder="Description"
    rows="2"
    class="form-input"
  ></textarea>

  <textarea
    name="highlights"
    placeholder="Highlights (comma separated)"
    rows="2"
    class="form-input"
  ></textarea>

  <!-- AVAILABILITY -->
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-3 items-end">
    <input type="date" id="date" class="form-input" />
    <input type="time" id="time" class="form-input" />
    <input type="number" id="slots" placeholder="Slots" class="form-input" />

    <button
      type="button"
      onclick="addSlot()"
      class="bg-yellow-400 hover:bg-yellow-500 h-[42px] rounded font-semibold"
    >
      Add Slot
    </button>
  </div>

  <div id="availabilityPreview" class="text-sm text-gray-600"></div>
  <input type="hidden" name="availability" id="availabilityInput" />

  <!-- ACTION -->
  <button
    class="w-full bg-green-500 hover:bg-green-600 text-white py-3 rounded-lg font-bold"
  >
    Save Experience
  </button>
</form>

</div>

<style>
  .panel {
    background-color: #f9fafb;
    border: 1px solid #d1d5db;
    border-radius: 10px;
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .form-input {
  width: 100%;
  padding: 10px 12px; /* ðŸ”‘ reduced */
  font-size: 14px;
  font-weight: 500;
  background-color: #f9fafb;
  border: 1px solid #d1d5db;
  border-radius: 8px;
  color: #111827;
}


  .form-input::placeholder {
    color: #6b7280;
  }

  .form-input:focus {
    outline: none;
    border-color: #facc15;
    box-shadow: 0 0 0 1px #facc15;
  }
</style>

<script>
  const availability = {};

  function addSlot() {
    const date = document.getElementById("date").value;
    const time = document.getElementById("time").value;
    const slots = Number(document.getElementById("slots").value);

    if (!date || !time || !slots) {
      alert("Please fill date, time and slots");
      return;
    }

    if (!availability[date]) availability[date] = [];

    availability[date].push({
      time: formatTime(time),
      slots
    });

    document.getElementById("availabilityInput").value =
      JSON.stringify(availability);

    renderPreview();

    document.getElementById("time").value = "";
    document.getElementById("slots").value = "";
  }

  function formatTime(t) {
    const [h, m] = t.split(":");
    const hour = (+h % 12) || 12;
    const ampm = h >= 12 ? "PM" : "AM";
    return `${hour}:${m} ${ampm}`;
  }

  function renderPreview() {
    const div = document.getElementById("availabilityPreview");
    div.innerHTML = "";

    for (const date in availability) {
      const line = document.createElement("div");
      line.innerHTML =
        `<strong>${date}</strong>: ` +
        availability[date]
          .map(s => `${s.time} (${s.slots})`)
          .join(", ");
      div.appendChild(line);
    }
  }
</script>

</body>
</html>
